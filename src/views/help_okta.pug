doctype html
html
    head
        title= title
        // [if IE]
        meta(http-equiv="X-UA-Compatible" content="IE=10; IE=EDGE")
        // [endif]
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel='stylesheet' href='/css/ah-tm.tags.css')
        link(rel='stylesheet' href='/css/ah-tm.login.css')
        link(rel='stylesheet' href='/css/ah-tm.help.css')
        style.
            body {
                font: 400 14px/20px Roboto, "Helvetica Neue", sans-serif;
                margin: 0;
                display: flex;
                flex-direction: column
            }
            .header {
                background-color: rgb(236, 236, 236);
                color: gray;
                flex-direction: row;
                box-sizing: border-box;
                display: flex;
                place-content: center flex-start;
                align-items: center;
                padding: 0 16px;
                width: 100%;
                height: 40px;
            }
            .header img {
                height: 100%;
            }

            .footer {
                  position: fixed;
                    left: 0;
                    bottom: 0;
                    width: 100%;
                background-color: rgb(236, 236, 236);
                    color: black;
                    text-align: center;
            }

            .title {
                color: black;
                font-weight: lighter;
                margin-left: 1em;
            }

            .toolbar {
                background-color: rgb(236 236 236);
                color: gray;
                height: 1.5em;
                margin: 0.5em 0;
            }
            .help {
                width: 600px;
                margin: auto;
                padding-bottom: 2em;
            }

            .help h3 {
                margin-left: -20px
            }
            .capture {
                display: flex;
            }

    body                      
        div.header    
            img(src="/images/juniper.png" alt="Mist")
